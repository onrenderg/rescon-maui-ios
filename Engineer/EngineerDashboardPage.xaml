<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ResillentConstruction.Engineer.EngineerDashboardPage"
                          xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls" 
             ios:Page.UseSafeArea="true">

    <NavigationPage.TitleView  >
        <Grid x:Name="Custom_Navigation" ColumnDefinitions="Auto,*" VerticalOptions="Fill" HorizontalOptions="Fill">
            <Image Grid.Column="0" Source="ic_himachallogo.png" HeightRequest="40" WidthRequest="40" VerticalOptions="Center"/>
            <StackLayout Grid.Column="1" Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center" Spacing="0">
                <Label x:Name="lbl_navigation_header"  FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
            </StackLayout>
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="ToolbarItem_Clicked">
            <ToolbarItem.IconImageSource>
                <AppThemeBinding Light="ic_home.png" Dark="ic_homewhite.png" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>


    <Grid>
        <Grid RowDefinitions="Auto, *, Auto" RowSpacing="3" Padding="5">



            <Grid Grid.Row="0" BackgroundColor="#058ef2" HeightRequest="70" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80*"/>
                    <ColumnDefinition Width="20*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" HorizontalOptions="Fill" HorizontalTextAlignment="Center" VerticalOptions="Center" x:Name="lbl_header_menu"  BackgroundColor="#058ef2"
                     TextColor="White"   FontAttributes="Bold" FontSize="18" Padding="5" Margin="0,5,0,0"/>
                <ImageButton Grid.Column="1" x:Name="img_language" Source="white_language_ico.png" BackgroundColor="Transparent" Clicked="img_language_Clicked" HeightRequest="40"  Padding="3"  />
            </Grid>



            <ScrollView Grid.Row="1" VerticalOptions ="Fill">
                <StackLayout>
                    <StackLayout Orientation="Vertical" Margin="0,5,0,0" >


                        <Border Stroke="#058ef2" StrokeThickness="1" HorizontalOptions="Fill" VerticalOptions="Start">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5" Padding="7">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Btn_ConfinedMasonry_Clicked" NumberOfTapsRequired="1"/>
                                </Grid.GestureRecognizers>
                                <Image Grid.Column="0" Source="ic_details.png" HeightRequest="50" HorizontalOptions="Start"/>
                                <Label Grid.Column="1" Text="Confined Masonry" x:Name="Btn_ConfinedMasonry" VerticalTextAlignment="Center" HorizontalOptions="Start" HorizontalTextAlignment="Start" FontSize="18" FontAttributes="Bold" />
                            </Grid>
                        </Border>

                        <Border Stroke="#058ef2" StrokeThickness="1" HorizontalOptions="Fill" VerticalOptions="Start">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5" Padding="7">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Btn_MaterialSpecificationsinConfinedMasonry_Clicked" NumberOfTapsRequired="1"/>
                                </Grid.GestureRecognizers>
                                <Image Grid.Column="0" Source="ic_details.png" HeightRequest="50" HorizontalOptions="Start"/>
                                <Label Grid.Column="1" Text="Material Specifications In Confined Masonry" x:Name="Btn_MaterialSpecificationsinConfinedMasonry" VerticalTextAlignment="Center" HorizontalOptions="Start" HorizontalTextAlignment="Start" FontSize="18" FontAttributes="Bold" />
                            </Grid>
                        </Border>

                        <Border Stroke="#058ef2" StrokeThickness="1" HorizontalOptions="Fill" VerticalOptions="Start">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5" Padding="7">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Btn_EarthquakePerformanceofConfinedMasonryStructures_Clicked" NumberOfTapsRequired="1"/>
                                </Grid.GestureRecognizers>
                                <Image Grid.Column="0" Source="ic_details.png" HeightRequest="50" HorizontalOptions="Start"/>
                                <Label Grid.Column="1" Text="Earthquake Performance of Confined Masonry Structures" x:Name="Btn_EarthquakePerformanceofConfinedMasonryStructures" VerticalTextAlignment="Center" HorizontalOptions="Start" HorizontalTextAlignment="Start" FontSize="18" FontAttributes="Bold" />
                            </Grid>
                        </Border>

                        <Border Stroke="#058ef2" StrokeThickness="1" HorizontalOptions="Fill" VerticalOptions="Start">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5" Padding="7">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Btn_ImprovisedplansforCommunityBuildings_Clicked" NumberOfTapsRequired="1"/>
                                </Grid.GestureRecognizers>
                                <Image Grid.Column="0" Source="ic_details.png" HeightRequest="50" HorizontalOptions="Start"/>
                                <Label Grid.Column="1" Text="Improvised plans for community buildings" x:Name="Btn_ImprovisedplansforCommunityBuildings" VerticalTextAlignment="Center" HorizontalOptions="Start" HorizontalTextAlignment="Start" FontSize="18" FontAttributes="Bold" />
                            </Grid>
                        </Border>

                        <Border Stroke="#058ef2" StrokeThickness="1" HorizontalOptions="Fill" VerticalOptions="Start">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5" Padding="7">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Btn_StepsToConfinedMasonry_Clicked" NumberOfTapsRequired="1"/>
                                </Grid.GestureRecognizers>
                                <Image Grid.Column="0" Source="ic_details.png" HeightRequest="50" HorizontalOptions="Start"/>
                                <Label Grid.Column="1" Text="Steps To Confined Masonry" x:Name="Btn_StepsToConfinedMasonry" VerticalTextAlignment="Center" HorizontalOptions="Start" HorizontalTextAlignment="Start" FontSize="18" FontAttributes="Bold" />
                            </Grid>
                        </Border>

                        <Border Stroke="#058ef2" StrokeThickness="1" HorizontalOptions="Fill" VerticalOptions="Start">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5" Padding="7">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Btn_SiteSelection_Clicked" NumberOfTapsRequired="1"/>
                                </Grid.GestureRecognizers>
                                <Image Grid.Column="0" Source="ic_details.png" HeightRequest="50" HorizontalOptions="Start"/>
                                <Label Grid.Column="1" Text="Site Selection" x:Name="Btn_SiteSelection" VerticalTextAlignment="Center" HorizontalOptions="Start" HorizontalTextAlignment="Start" FontSize="18" FontAttributes="Bold" />
                            </Grid>
                        </Border>

                        <Border Stroke="#058ef2" StrokeThickness="1" HorizontalOptions="Fill" VerticalOptions="Start">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5" Padding="7">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Btn_SitePreparation_Clicked" NumberOfTapsRequired="1"/>
                                </Grid.GestureRecognizers>
                                <Image Grid.Column="0" Source="ic_details.png" HeightRequest="50" HorizontalOptions="Start"/>
                                <Label Grid.Column="1" Text="Site Preparation" x:Name="Btn_SitePreparation" VerticalTextAlignment="Center" HorizontalOptions="Start" HorizontalTextAlignment="Start" FontSize="18" FontAttributes="Bold" />
                            </Grid>
                        </Border>

                        <Border Stroke="#058ef2" StrokeThickness="1" HorizontalOptions="Fill" VerticalOptions="Start">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5" Padding="7">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Btn_Quality_Clicked" NumberOfTapsRequired="1"/>
                                </Grid.GestureRecognizers>
                                <Image Grid.Column="0" Source="ic_details.png" HeightRequest="50" HorizontalOptions="Start"/>
                                <Label Grid.Column="1" Text="Quality" x:Name="Btn_Quality" VerticalTextAlignment="Center" HorizontalOptions="Start" HorizontalTextAlignment="Start" FontSize="18" FontAttributes="Bold" />
                            </Grid>
                        </Border>

                        <Border Stroke="#058ef2" StrokeThickness="1" HorizontalOptions="Fill" VerticalOptions="Start">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5" Padding="7">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Btn_Dos_Clicked" NumberOfTapsRequired="1"/>
                                </Grid.GestureRecognizers>
                                <Image Grid.Column="0" Source="ic_details.png" HeightRequest="50" HorizontalOptions="Start"/>
                                <Label Grid.Column="1" Text="Do's" x:Name="Btn_Dos" VerticalTextAlignment="Center" HorizontalOptions="Start" HorizontalTextAlignment="Start" FontSize="18" FontAttributes="Bold" />
                            </Grid>
                        </Border>

                        <Border Stroke="#058ef2" StrokeThickness="1" HorizontalOptions="Fill" VerticalOptions="Start">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5" Padding="7">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Btn_Annexure_Clicked" NumberOfTapsRequired="1"/>
                                </Grid.GestureRecognizers>
                                <Image Grid.Column="0" Source="ic_details.png" HeightRequest="50" HorizontalOptions="Start"/>
                                <Label Grid.Column="1" Text="Annexure" x:Name="Btn_Annexure" VerticalTextAlignment="Center" HorizontalOptions="Start" HorizontalTextAlignment="Start" FontSize="18" FontAttributes="Bold" />
                            </Grid>
                        </Border>

                        <!--   <Frame Padding="1" Margin="2"  CornerRadius="10" BackgroundColor="White" HasShadow="True" BorderColor="#058ef2" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand">
                            <StackLayout Orientation="Horizontal"  VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Spacing="5" Padding="7">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Btn_AverageConstructionCost_Clicked" NumberOfTapsRequired="1"/>
                                </StackLayout.GestureRecognizers>
                                <Image Source="ic_constructioncost1.png" HeightRequest="50" HorizontalOptions="Start"/>
                                <Label  Text="Average Construction Cost" x:Name="Btn_AverageConstructionCost"  VerticalTextAlignment="Center" HorizontalOptions="StartAndExpand" HorizontalTextAlignment="Start" FontSize="18" FontAttributes="Bold" />
                            </StackLayout>
                        </Frame>-->
                    </StackLayout>
                </StackLayout>
            </ScrollView>

            <Grid Grid.Row="2" VerticalOptions="End" Style="{StaticResource FooterGridStyle}" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>


                <StackLayout Orientation="Vertical" HorizontalOptions="Fill" Grid.Row="0" Grid.Column="0">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Tab_Home_Tapped"/>
                    </StackLayout.GestureRecognizers>
                    <Image x:Name="Tab_Home_Image" Source="ic_home.png" HeightRequest="20"/>
                    <Label x:Name="Tab_Home_Label" Text="Home" Style="{StaticResource LabelStyle_TabMenu}"/>
                </StackLayout>

                <StackLayout Orientation="Vertical" HorizontalOptions="Fill" Grid.Row="0" Grid.Column="1">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Tab_Download_Tapped"/>
                    </StackLayout.GestureRecognizers>
                    <Image x:Name="Tab_Download_Image" Source="ic_downloadwhite.png" HeightRequest="20"/>
                    <Label x:Name="Tab_Download_Label" Text="Download" Style="{StaticResource LabelStyle_TabMenu}"/>
                </StackLayout>

                <StackLayout Orientation="Vertical" HorizontalOptions="Fill" Grid.Row="0" Grid.Column="2" >
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Tab_Settings_Tapped"/>
                    </StackLayout.GestureRecognizers>
                    <Image x:Name="Tab_Settings_Image" Source="ic_morewhite.png" HeightRequest="20"/>
                    <Label x:Name="Tab_Settings_Label" Text="More" Style="{StaticResource LabelStyle_TabMenu}"/>
                </StackLayout>

            </Grid>
        </Grid>

        <ContentView x:Name="Loading_activity" BackgroundColor="#C0808080" Padding="20, 20" IsVisible="false" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Border HorizontalOptions="Fill">
                    <StackLayout Orientation="Horizontal" Margin="6" HorizontalOptions="Fill">
                        <ActivityIndicator IsVisible="true" IsRunning="true" Margin="5"/>
                        <Label x:Name="lbl_PleaseWait" Text="Please Wait ..." TextColor="Black" FontAttributes="Bold" HorizontalOptions="Fill" WidthRequest="600" VerticalTextAlignment="Center"/>
                    </StackLayout>
                </Border>
            </StackLayout>
        </ContentView>
    </Grid>
</ContentPage>